
<!doctype html>
<html>
    <head>
        <title>Đăng kí</title>
        <% if (state=="fail") { %>
            <script>
               alert("FAIL");       
            </script>
       <% } %>
       <% if (state=="exist") { %>
        <script>
           alert("Tên đăng nhập đã tồn tại");       
        </script>
        <% } %>
        <!-- <link rel="stylesheet" href="CSS/1.css"> -->
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css" integrity="sha384-B4dIYHKNBt8Bc12p+WXckhzcICo0wtJAoU8YZTY5qE0Id1GSseTk6S+L3BlXeVIU" crossorigin="anonymous">
        <link href="https://fonts.googleapis.com/css?family=Merriweather:300,400,400i|Noto+Sans:400,400i,700" rel="stylesheet">
        <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600" rel="stylesheet">
        <script>
            function CheckEmpty(x){
                console.log("X",x);
                if(x==''){
                    return false;
                }
                else return true;
            }
            function CheckRegistryForm(){
                var username = document.getElementById('username').value;
                var password = document.getElementById('password').value;
                var match = document.getElementById('match').value;
                if(CheckEmpty(username) && CheckEmpty(password) && CheckEmpty(match)){
                    return true
                }
                else{
                    if(!CheckEmpty(username)){
                        alert("Chưa nhập tên đăng nhập");
                        return false;
                    }
                    if(!CheckEmpty(password)){
                        alert("Chưa nhập mật khẩu");
                        return false;
                    }
                    if(!CheckEmpty(match)){
                        alert("Xác nhận mật khẩu không được để trống");
                        return false;
                    }
                    return false;
                }
            }
        </script>
    </head>
    <body>
        <form method="POST" action="./check" onsubmit="return CheckRegistryForm()">
            <h2>Đăng ký</h2>
            <label>Tên đăng nhập</label>
            <input type="text" name="username" id="username"></br>
            <label>Mật khẩu</label>
            <input type="text" name="pass" id="password"> </br>
            <label>Xác nhận mật khẩu</label>
            <input type="text" name="match" id="match"> </br>
            <input id="submit" type="submit" name="submit" value="Gửi">
        </form>                
    </body>
</html>